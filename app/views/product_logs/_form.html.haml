= form_for @product_log do |f|
  - if @product_log.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product_log.errors.count, "error")} prohibited this product_log from being saved:"
      %ul
        - @product_log.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :product_id
    = f.number_field :product_id
  .field
    = f.label :action
    = f.number_field :action
  .actions
    = f.submit 'Save'
