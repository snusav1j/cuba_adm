= form_for @product_photo do |f|
  - if @product_photo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product_photo.errors.count, "error")} prohibited this product_photo from being saved:"
      %ul
        - @product_photo.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :product_id
    = f.number_field :product_id
  .field
    = f.label :photo_name
    = f.text_field :photo_name
  .actions
    = f.submit 'Save'
