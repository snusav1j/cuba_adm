= form_for @profile_photo do |f|
  - if @profile_photo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile_photo.errors.count, "error")} prohibited this profile_photo from being saved:"
      %ul
        - @profile_photo.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :photo_url
    = f.text_field :photo_url
  .field
    = f.label :photo_name
    = f.text_field :photo_name
  .actions
    = f.submit 'Save'
