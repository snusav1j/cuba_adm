%h1 Editing user

= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :firstname
    = f.text_field :firstname, required: true
  .field
    = f.label :lastname
    = f.text_field :lastname, required: true
  .field
    = f.label :role
    = f.text_field :role
  .field
    = f.label :email
    = f.text_field :email, required: true
  .field
    = f.label :login
    = f.text_field :login, required: true
  .field
    = f.label :password
    = f.text_field :password, required: true
  .actions
    = f.submit 'Edit'


= link_to 'Show', @user

